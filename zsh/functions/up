up() { # https://gist.github.com/1474072
    if [ "$1" != "" -a "$2" != "" ]; then
local DIR=$1
        local TARGET=$2
    elif [ "$1" ]; then
local DIR=$PWD
        local TARGET=$1
    fi
while [ ! -e $DIR/$TARGET -a $DIR != "/" ]; do
DIR=$(dirname $DIR)
    done
test $DIR != "/" && echo $DIR/$TARGET
}
