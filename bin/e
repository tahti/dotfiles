#!/bin/bash
if [ -z $DISPLAY ] ; then
OPT="-t"
else
OPT="-c"
fi
if [ -z $1 ] ; then
  emacsclient.emacs24 $OPT 2>/dev/null || (
  (emacs24 --daemon)
  sleep 2
  emacsclient.emacs24 $OPT)
else
  emacsclient.emacs24 $OPT "$*" 2>/dev/null || (
  (emacs24 --daemon)
  sleep 2
  emacsclient.emacs24 $OPT "$*")
fi
