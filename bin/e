#!/bin/bash
if [ -z $DISPLAY ] ; then
OPT="-s edit -t"
else
OPT="-s edit -c"
fi
if [ -z $1 ] ; then
  emacsclient $OPT 1>/dev/null || (
  (emacs-24.3.50 --daemon=edit)
  sleep 2
  emacsclient  $OPT)
else
  emacsclient $OPT $@ 2>/dev/null || (
  (emacs-24.3.50 --daemon=edit)
  sleep 2
  emacsclient $OPT $@)
fi
