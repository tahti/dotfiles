#!/bin/zsh
ID=$(xprop -root | awk '/_NET_ACTIVE_WINDOW\(WINDOW\)/{print $NF}')
#NAME=$(xprop -id $ID | awk '/WM_CLASS\(STRING\)/{print $NF}')
PID=($(xprop -id $ID | awk '/_NET_WM_PID\(CARDINAL\)/{print $NF}'))
CPID=($(ps --ppid $PID |awk '/^[ \t]*[0-9]/ {print $1}' ))
echo "before loop $CPID + pid $PID">>~/ti
while [ -n "$CPID" ]
do
  echo "in loop $CPID">>~/ti
  if [ -e "/proc/$CPID/cwd" ] 
  then
    echo "assigned $CPID to $PID">>~/ti
    PID=$CPID
  fi
  CPID=$(ps --ppid $CPID |awk '/^[0-9]/ {print $1}')
done
#if [[ $NAME == "\"URxvt\"" ]]
#then
  #echo "inc $PID ">~/tt
  ##PID=$(($PID + 2))
#fi
if [ -e "/proc/$PID/cwd" ]
then
    urxvt -meta8 -cd $(readlink /proc/$PID/cwd) &
    echo "cd $PID">>~/ti 
else
    echo "no cd $PID">>~/ti 
    urxvt -meta8 
fi
#sleep 2;xprop -id $(xprop -root | awk '/_NET_ACTIVE_WINDOW\(WINDOW\)/{print # $NF}')
